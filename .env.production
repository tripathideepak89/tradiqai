# Production Environment Configuration
# Copy this to .env.production and update with production values

# ====================================
# DEPLOYMENT MODE
# ====================================
ENVIRONMENT=production
LOG_LEVEL=INFO
PAPER_TRADING=false  # SET TO false FOR LIVE TRADING

# ====================================
# DATABASE CONFIGURATION
# ====================================
# PostgreSQL (Production)
DATABASE_URL=postgresql://postgres:your_secure_password@postgres:5432/autotrade

# Redis (Production)
REDIS_URL=redis://redis:6379/0

# ====================================
# BROKER CONFIGURATION
# ====================================
BROKER=groww  # or zerodha

# Groww API Credentials
GROWW_API_KEY=your_production_api_key_here
GROWW_API_SECRET=your_production_api_secret_here
GROWW_API_URL=https://api.groww.in/v1

# Zerodha API Credentials (if using Zerodha)
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret
ZERODHA_USER_ID=your_zerodha_user_id
ZERODHA_PASSWORD=your_zerodha_password
ZERODHA_TOTP_SECRET=your_zerodha_totp_secret

# ====================================
# RISK MANAGEMENT
# ====================================
INITIAL_CAPITAL=50000
MAX_DAILY_LOSS=1500
MAX_RISK_PER_TRADE=400
MAX_POSITION_SIZE=0.3
MAX_OPEN_POSITIONS=2

# ====================================
# TRADING CONFIGURATION
# ====================================
ENABLE_INTRADAY=true
ENABLE_SWING=false
WATCHLIST=RELIANCE,TCS,INFY,HDFCBANK,ICICIBANK

# ====================================
# MONITORING & ALERTS
# ====================================
# Telegram Bot (for trade alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Alerts (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=your_email@gmail.com

# ====================================
# SECURITY
# ====================================
# API Server (if exposing REST API)
API_ENABLED=false
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change_this_to_a_secure_random_key

# ====================================
# PERFORMANCE
# ====================================
# Number of workers for async operations
WORKERS=4

# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis connection pool
REDIS_POOL_SIZE=10

# ====================================
# BACKUP & RECOVERY
# ====================================
# Automatic backup enabled
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/data/backups

# ====================================
# TIMEZONE
# ====================================
TZ=Asia/Kolkata
