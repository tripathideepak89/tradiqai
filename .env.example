# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Broker Selection (zerodha or groww)
BROKER=zerodha

# Trading Configuration
INITIAL_CAPITAL=50000
MAX_DAILY_LOSS=1500
MAX_PER_TRADE_RISK=400
MAX_OPEN_TRADES=2
MAX_CAPITAL_PER_TRADE=12500
MAX_EXPOSURE_PERCENT=80
CONSECUTIVE_LOSS_LIMIT=3

# Zerodha Configuration
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_USER_ID=your_user_id_here
ZERODHA_PASSWORD=your_password_here
ZERODHA_TOTP_SECRET=your_totp_secret_here

# Groww Configuration
GROWW_API_KEY=your_groww_jwt_token_here
GROWW_API_SECRET=your_groww_api_secret_here
GROWW_API_URL=https://api.groww.in/v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/autotrade
REDIS_URL=redis://localhost:6379/0

# Monitoring & Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
ENABLE_ALERTS=true

# Trading Hours (IST)
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30

# Strategy Settings
ENABLE_INTRADAY=true
ENABLE_SWING=false
PAPER_TRADING=true

# Safety Settings
ENABLE_KILL_SWITCH=true
POSITION_RECONCILIATION_INTERVAL=10
